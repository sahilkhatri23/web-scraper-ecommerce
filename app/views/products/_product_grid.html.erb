<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
  <% @products.each do |product| %>
    <div class="border rounded-lg overflow-hidden shadow-lg">
      <%= link_to product_path(product) do %>
        <!-- Product Image -->
        <div class="aspect-w-1 aspect-h-1 bg-gray-200">
          <%= image_tag product.images.attached? ? url_for(product.images.first) : 'https://via.placeholder.com/300', alt: product.name, class: "w-full h-full object-cover" %>
        </div>
        <!-- Product Details -->
        <div class="p-4">
          <h3 class="text-lg font-semibold text-gray-800 truncate"><%= product.name %></h3>
          <p class="text-green-600 font-bold mt-2">â‚¹ <%= number_with_delimiter(product.price.to_i, delimiter: ',') %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
